mixin moment(date)
    - const now = new Date()
    - const diffInMs = now - new Date(date)
    - const diffInSeconds = Math.floor(diffInMs / 1000)
    - const diffInMinutes = Math.floor(diffInSeconds / 60)
    - const diffInHours = Math.floor(diffInMinutes / 60)
    - const diffInDays = Math.floor(diffInHours / 24)
    
    if diffInSeconds < 60
        span #{diffInSeconds} giây trước
    else if diffInMinutes < 60
        span #{diffInMinutes} phút trước
    else if diffInHours < 24
        span #{diffInHours} giờ trước
    else if diffInDays < 7
        span #{diffInDays} ngày trước
    else
        - const formattedDate = new Date(date).toLocaleDateString('vi-VN', { year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' })
        span= formattedDate
