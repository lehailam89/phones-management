include ../mixins/sub-menu.pug
header.header 
    .container 
        .row.align-items-center
            .col-lg-3.col-md-12.text-center.text-lg-start
                .inner-logo
                    a(href="/" class="d-flex align-items-center justify-content-center justify-content-lg-start")
                        img(src=settingGeneral.logo, alt="Logo")

            .col-lg-5.col-md-12
                .inner-search
                    form(
                        action="/search"
                        method="GET"
                    )
                        div(class="form-group d-flex mb-0 search-box")
                            button(
                                type="submit"
                                class=""
                            ) <i class="fa-solid fa-magnifying-glass"></i>
                            input(
                                type="text"
                                placeholder="Bạn cần tìm gì?"
                                class="search-input"
                                name="keyword"
                                value=keyword
                            )
                        
            .col-lg-4.col-md-12
                .inner-menu
                    ul
                        li
                            a(href="/") Trang chủ
                        li(class= "sub-menu")
                            - const pathProduct = "/products"
                            a(href=pathProduct) Sản phẩm
                            if (layoutCategoryProducts)
                                +sub-menu(layoutCategoryProducts, pathProduct)
                        li
                            a(href="/cart" class="mini-cart") 
                                i(class="fa-solid fa-cart-shopping") 
                                div(class="mini-cart-quantity")
                                    | #{miniCart ? miniCart.totalQuantity : "0"}
                        if(user)
                            li 
                                a(href="/user/info") #{user.fullName}
                            li 
                                a(href="/user/logout") Đăng xuất
                        else
                            li 
                                a(href="/user/register") Đăng kí
                            li
                                a(href="/user/login") Đăng nhập
                        li
                            a(href="/posts") Bài viết

// Chat AI Floating Button
.chat-ai-floating
    a(href="/chat")
        i.fas.fa-comments
        | Chat AI