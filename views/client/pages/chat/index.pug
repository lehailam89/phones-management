    // CSS cho chat - ƒë√£ t·ªëi ∆∞u
    style.
        /* Reset v√† t·ªëi ∆∞u layout */
        .chat-messages {
            position: relative;
            overflow-x: hidden;
            margin: 0;
            display: flex;
            flex-direction: column;
            gap: 8px;
        }
        
        .message-container {
            display: flex;
            flex-direction: column;
            margin: 0;
            padding: 0;
        }
        
        .message-wrapper {
            display: flex;
            align-items: flex-end;
            gap: 8px;
            max-width: 80%;
        }
        
        .user-message .message-wrapper {
            margin-left: auto;
            flex-direction: row-reverse;
        }
        
        .ai-message .message-wrapper {
            margin-right: auto;
        }
        
        .message-avatar {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
            flex-shrink: 0;
            background: #e9ecef;
            border: 2px solid #fff;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }
        
        .user-message .message-avatar {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .ai-message .message-avatar {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        }
        
        .message-content {
            background: white;
            border-radius: 15px;
            padding: 10px 14px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            position: relative;
            max-width: 320px;
            word-wrap: break-word;
        }
        
        .user-message .message-content {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        
        .sender-name {
            font-size: 11px;
            font-weight: 600;
            margin-bottom: 3px;
            opacity: 0.8;
        }
        
        .user-message .sender-name {
            color: rgba(255, 255, 255, 0.9);
        }
        
        .ai-message .sender-name {
            color: #6c757d;
        }
        
        .message-text {
            font-size: 14px;
            line-height: 1.4;
            word-wrap: break-word;
            margin-bottom: 3px;
            margin: 0;
        }
        
        .message-timestamp {
            font-size: 10px;
            opacity: 0.6;
            text-align: right;
            margin-top: 2px;
        }
        
        .user-message .message-timestamp {
            color: rgba(255, 255, 255, 0.7);
        }
        
        .ai-message .message-timestamp {
            color: #6c757d;
        }
        
        .typing-indicator {
            display: flex;
            align-items: center;
            margin: 0;
        }
        
        .typing-dots {
            display: flex;
            gap: 3px;
            padding: 6px 0;
        }
        
        .typing-dots span {
            width: 5px;
            height: 5px;
            border-radius: 50%;
            background-color: #6c757d;
            animation: typing 1.4s infinite ease-in-out;
        }
        
        .typing-dots span:nth-child(1) { animation-delay: -0.32s; }
        .typing-dots span:nth-child(2) { animation-delay: -0.16s; }
        
        @keyframes typing {
            0%, 80%, 100% {
                transform: scale(0.8);
                opacity: 0.5;
            }
            40% {
                transform: scale(1);
                opacity: 1;
            }
        }
        
        .chat-input-area {
            margin: 0;
            padding: 0;
        }
        
        #chat-input {
            resize: none;
            outline: none;
            border: 2px solid #e9ecef;
            transition: border-color 0.2s;
        }
        
        #chat-input:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.1rem rgba(102, 126, 234, 0.25);
        }
        
        .card-footer {
            border-top: 1px solid #e9ecef;
            background: white;
        }
        
        .card-body {
            background: #f8f9fa;
        }
        
        #send-chat {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: transform 0.2s;
        }
        
        #send-chat:hover {
            transform: scale(1.05);
        }
        
        #send-chat:active {
            transform: scale(0.95);
        }
        
        #open-chatbox {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 50%;
            width: 60px;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: 0 4px 20px rgba(102, 126, 234, 0.4);
            z-index: 999;
            font-size: 24px;
            transition: transform 0.2s;
        }
        
        #open-chatbox:hover {
            transform: scale(1.1);
        }
        
        /* Responsive */
        @media (max-width: 768px) {
            .message-wrapper {
                max-width: 85%;
            }
            
            .message-content {
                max-width: 280px;
            }
            
            .message-avatar {
                width: 32px;
                height: 32px;
                font-size: 16px;
            }
        }